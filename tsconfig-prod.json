{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["ES2020"],
		"outDir": "dist",
		"sourceMap": false,
		"strict": true,
		"rootDir": "src",
		"esModuleInterop": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"dist"
	]
}